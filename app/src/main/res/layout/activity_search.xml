<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.a10609516.myapplication.SearchActivity">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="295dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/searchline"
            android:orientation="vertical"
            android:weightSum="1"
            app:layout_constraintHorizontal_bias="0.518"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/label"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_weight="0.05"
                android:gravity="center"
                android:text="查詢派工資料"
                android:textSize="25dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/start1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:text="預約開始日期:"
                    android:textColor="@color/colorAccent"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/start2"
                    android:layout_width="190dp"
                    android:layout_height="45dp"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:layout_toEndOf="@+id/sql_total_textView"
                    android:layout_toRightOf="@+id/sql_total_textView"
                    android:background="#F5F5F5"
                    android:gravity="center"
                    android:onClick="showDatePickerDialog"
                    android:text="" />

                <Button
                    android:id="@+id/clean_button1"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_toEndOf="@+id/start2"
                    android:layout_toRightOf="@+id/start2"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:background="#F5F5F5"
                    android:gravity="center"
                    android:text="X" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/end1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:text="預約結束日期:"
                    android:textColor="@color/colorAccent"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/end2"
                    android:layout_width="190dp"
                    android:layout_height="45dp"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:layout_toEndOf="@+id/sql_total_textView"
                    android:layout_toRightOf="@+id/sql_total_textView"
                    android:background="#F5F5F5"
                    android:gravity="center"
                    android:onClick="showDatePickerDialog"
                    android:text="" />

                <Button
                    android:id="@+id/clean_button2"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_toEndOf="@+id/end2"
                    android:layout_toRightOf="@+id/end2"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:background="#F5F5F5"
                    android:gravity="center"
                    android:text="X" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.13"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/client"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:text="送貨客戶:"
                    android:textColor="@color/colorAccent"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/customer_editText"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:maxLines="1"
                    android:text="" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.72"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:text="派工類別:"
                    android:textColor="@color/colorAccent"
                    android:textSize="18dp" />

                <Spinner
                    android:id="@+id/selectList"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center" />


            </LinearLayout>

            <Button
                android:id="@+id/search_button"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.05"
                android:background="@drawable/button"
                android:text="查詢"
                android:textColor="#0000ff"
                android:textSize="20dp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="398dp"
            android:layout_height="7dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="#CCEEFF"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/search_linearlayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

            <TableLayout
                android:id="@+id/search_tablelayot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/titleline"
                android:divider="@drawable/table_h_divider"
                app:layout_constraintVertical_bias="1.0" />

        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</ScrollView>