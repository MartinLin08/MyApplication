<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a10609516.myapplication.MaintainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.a10609516.myapplication.MaintainActivity">

        <TextView
            android:id="@+id/maintain_textView"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="出勤維護"
            android:textColor="@color/colorAccent"
            android:textSize="17dp" />

        <TableLayout
            android:id="@+id/maintain_tablelayot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/titleline"
            app:layout_constraintVertical_bias="1.0">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="40dp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="派工類別"
                    android:textColor="@color/colorAccent"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/work_type_name_txt"
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:layout_column="1"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/colorAccent"
                    android:textSize="18dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="40dp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="派工單號"
                    android:textColor="@color/colorAccent"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/svd_service_no_txt"
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:layout_column="1"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/colorAccent"
                    android:textSize="18dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="送貨客戶"
                    android:textColor="@color/colorAccent"
                    android:textSize="18dp" />

                <LinearLayout
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/esv_note_txt"
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/colorAccent"
                        android:textSize="18dp" />

                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="40dp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="預約日期時段"
                    android:textColor="@color/colorAccent"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/time_period_name_txt"
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:layout_column="1"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/colorAccent"
                    android:textSize="18dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="40dp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="付款方式"
                    android:textColor="@color/colorAccent"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/cp_name_txt"
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:layout_column="1"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/colorAccent"
                    android:textSize="18dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="40dp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="是否要收款"
                    android:textColor="@color/colorAccent"
                    android:textSize="18dp" />

                <CheckBox
                    android:id="@+id/is_get_money_checkBox"
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:layout_column="1"
                    android:enabled="false"
                    android:gravity="center_vertical"
                    android:text="收款"
                    android:textColor="@color/colorAccent"
                    android:textSize="18dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="40dp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="應收款金額"
                    android:textColor="@color/colorAccent"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/esvd_is_money_txt"
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:layout_column="1"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/colorAccent"
                    android:textSize="18dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:text="任務說明"
                    android:textColor="@color/colorAccent"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/esvd_booking_remark_txt"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/colorAccent"
                    android:textSize="18dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="40dp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

                <TextView
                    android:id="@+id/have_get_money_txt"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="是否已收款"
                    android:textColor="@color/colorAccent"
                    android:textSize="18dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="40dp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

                <CheckBox
                    android:id="@+id/have_get_money_checkBox"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:onClick="onCheckboxClicked"
                    android:text="已收款"
                    android:textColor="@color/colorAccent"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/have_get_money_edt"
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:layout_column="1"
                    android:gravity="center_vertical"
                    android:hint="金額"
                    android:textColor="@color/colorAccent"
                    android:textSize="16dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="40dp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

                <CheckBox
                    android:id="@+id/not_get_all_checkBox"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:onClick="onCheckboxClicked"
                    android:text="未收齊"
                    android:textColor="@color/colorAccent"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/not_get_all_edt"
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:layout_column="1"
                    android:gravity="center_vertical"
                    android:hint="已收金額"
                    android:textColor="@color/colorAccent"
                    android:textSize="16dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

                <CheckBox
                    android:id="@+id/not_get_money_checkBox"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:onClick="onCheckboxClicked"
                    android:text="未收款"
                    android:textColor="@color/colorAccent"
                    android:textSize="18dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="40dp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="抵達日期"
                    android:textColor="@color/colorAccent"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/arrive_button"
                    android:layout_width="190dp"
                    android:layout_height="35dp"
                    android:background="#F5F5F5"
                    android:gravity="center"
                    android:onClick="showDatePickerDialog"
                    android:text="年/月/日" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="40dp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="抵達時間"
                    android:textColor="@color/colorAccent"
                    android:textSize="18dp" />

                <Spinner
                    android:id="@+id/arrive_spinner"
                    android:layout_width="190dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:background="#F5F5F5"
                    android:gravity="center" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="40dp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="離開時間"
                    android:textColor="@color/colorAccent"
                    android:textSize="18dp" />

                <Spinner
                    android:id="@+id/leave_spinner"
                    android:layout_width="190dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:background="#F5F5F5"
                    android:gravity="center" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="40dp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="無效派工"
                    android:textColor="@color/colorAccent"
                    android:textSize="18dp" />

                <Spinner
                    android:id="@+id/useless_spinner"
                    android:layout_width="190dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:background="#F5F5F5"
                    android:gravity="center" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="工作說明"
                    android:textColor="@color/colorAccent"
                    android:textSize="18dp" />

                <LinearLayout
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/esvd_remark_txt"
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:ems="10"
                        android:inputType="textMultiLine" />

                </LinearLayout>

            </TableRow>

        </TableLayout>


        <Button
            android:id="@+id/check_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button"
            android:text="OK"
            android:textColor="@color/colorAccent"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="6dp" />

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button"
            android:text="取消"
            android:textColor="@color/colorAccent"
            android:textSize="20dp" />

    </LinearLayout>

</ScrollView>
