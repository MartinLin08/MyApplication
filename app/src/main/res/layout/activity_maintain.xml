<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a10609516.myapplication.MaintainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.a10609516.myapplication.MaintainActivity">

        <TextView
            android:id="@+id/maintain_textView"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="出勤維護"
            android:textColor="@color/colorAccent"
            android:textSize="17dp" />

        <TableLayout
            android:id="@+id/maintain_tablelayot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/titleline"
            app:layout_constraintVertical_bias="1.0">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="40dp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="派工類別"
                    android:textColor="@color/colorAccent"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/work_type_name_txt"
                    android:layout_width="210dp"
                    android:layout_height="40dp"
                    android:layout_column="1"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/colorAccent"
                    android:textSize="18dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="40dp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="派工單號"
                    android:textColor="@color/colorAccent"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/svd_service_no_txt"
                    android:layout_width="210dp"
                    android:layout_height="40dp"
                    android:layout_column="1"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/colorAccent"
                    android:textSize="18dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="40dp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="送貨客戶"
                    android:textColor="@color/colorAccent"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/esv_note_txt"
                    android:layout_width="210dp"
                    android:layout_height="40dp"
                    android:layout_column="1"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/colorAccent"
                    android:textSize="18dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="40dp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="預約日期時段"
                    android:textColor="@color/colorAccent"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/time_period_name_txt"
                    android:layout_width="210dp"
                    android:layout_height="40dp"
                    android:layout_column="1"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/colorAccent"
                    android:textSize="18dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="40dp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="付款方式"
                    android:textColor="@color/colorAccent"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/cp_name_txt"
                    android:layout_width="210dp"
                    android:layout_height="40dp"
                    android:layout_column="1"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/colorAccent"
                    android:textSize="18dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="40dp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="是否要收款"
                    android:textColor="@color/colorAccent"
                    android:textSize="18dp" />

                <CheckBox
                    android:id="@+id/checkBox1"
                    android:layout_width="210dp"
                    android:layout_height="40dp"
                    android:layout_column="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorAccent"
                    android:textSize="18dp"
                    android:text="收款" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="40dp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="應收款金額"
                    android:textColor="@color/colorAccent"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/esvd_is_money_txt"
                    android:layout_width="210dp"
                    android:layout_height="40dp"
                    android:layout_column="1"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/colorAccent"
                    android:textSize="18dp" />

            </TableRow>

        </TableLayout>


        <Button
            android:id="@+id/check_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button"
            android:text="OK"
            android:textColor="@color/colorAccent"
            android:textSize="20dp" />


        <Button
            android:id="@+id/cancel_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button"
            android:text="取消"
            android:textColor="@color/colorAccent"
            android:textSize="20dp" />
    </LinearLayout>
</ScrollView>
